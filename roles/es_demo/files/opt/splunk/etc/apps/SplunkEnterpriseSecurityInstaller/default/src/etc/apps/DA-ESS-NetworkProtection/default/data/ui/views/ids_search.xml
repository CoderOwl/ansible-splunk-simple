<form script="ids_search.js">
	<label>Intrusion Search</label>
	
	<fieldset autoRun="true" submitButton="true">
	                
        <input type="text" token="category">
            <label>IDS Category</label>
            <default></default>
            <prefix>IDS_Attacks.category="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="dropdown" token="severity">
            <label>Severity</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="severity" fieldForLabel="severity">| `cim_ids_severities`</populatingSearch>
            <default></default>
            <prefix>IDS_Attacks.severity="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="signature">
            <label>Signature</label>
            <default></default>
            <prefix>IDS_Attacks.signature="</prefix>
            <suffix>"</suffix>
        </input>
                
        <input type="text" token="src">
            <label>Source</label>
            <default></default>
            <prefix>IDS_Attacks.src="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="dest">
            <label>Destination</label>
            <default></default>
            <prefix>IDS_Attacks.dest="</prefix>
            <suffix>"</suffix>
        </input>

		<input type="time">
			<default>Last 24 hours</default>
		</input>
	</fieldset>
	
	<row>
		<table id="table1">
			<title> </title>
			
			<searchTemplate>| tstats `summariesonly` max(_time) as _time,values(IDS_Attacks.severity) as severity,count from datamodel=Intrusion_Detection where * $category$ $severity$ $signature$ $src$ $dest$ by IDS_Attacks.category,IDS_Attacks.signature,IDS_Attacks.src,IDS_Attacks.dest | `drop_dm_object_name("IDS_Attacks")` | sort - count | fields _time,severity,category,signature,src,dest,count</searchTemplate>
		    
		    <option name="count">5</option>
		    
		    <drilldown>
		        <link>search?q=| `datamodel("Intrusion_Detection", "IDS_Attacks")` | search IDS_Attacks.category="$row.category$" IDS_Attacks.signature="$row.signature$" IDS_Attacks.src="$row.src$" IDS_Attacks.dest="$row.dest$" | `drop_dm_object_name("IDS_Attacks")`&amp;earliest=$earliest$&amp;latest=$latest$</link>
		    </drilldown>
		</table>
	</row>
	
	<row>
		<event id="event1">
			<title> </title>
			
			<searchTemplate>| `datamodel("Intrusion_Detection", "IDS_Attacks")` | search $category$ $severity$ $signature$ $src$ $dest$ | `drop_dm_object_name("IDS_Attacks")` | head 100</searchTemplate>
			
			<option name="count">5</option>
			<option name="rowNumbers">false</option>
			<option name="type">list</option>
			<option name="list.wrap">true</option>
			<fields>severity, category, signature, src, src_port, dest, dest_port, user, vendor_product</fields>
		</event>
	</row>
</form>