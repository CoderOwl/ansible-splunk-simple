<form script="access_search.js">
	<label>Access Search</label>
	
	<fieldset autoRun="true" submitButton="true">
	
        <input type="dropdown" token="action">
            <label>Action</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="action" fieldForLabel="action">| `cim_access_actions`</populatingSearch>
            <default></default>
            <prefix>Authentication.action="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="dropdown" token="app">
            <label>App</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="app" fieldForLabel="app">| `access_apps`</populatingSearch>
            <default></default>
            <prefix>Authentication.app="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="src">
            <label>Source</label>
            <default></default>
            <prefix>Authentication.src="</prefix>
            <suffix>"</suffix>
        </input>

        <input type="text" token="dest">
            <label>Destination</label>
            <default></default>
            <prefix>Authentication.dest="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="user">
            <label>User</label>
            <default></default>
            <prefix>Authentication.user="</prefix>
            <suffix>"</suffix>
        </input>
        
		<input type="time">
			<default>Last 24 hours</default>
		</input>
	</fieldset>
	
	<row>
		<table id="table1">
			<title> </title>
			
			<searchTemplate>| tstats `summariesonly` max(_time) as _time,values(Authentication.action) as action,values(Authentication.app) as app,count from datamodel=Authentication where * $action$ $app$ $src$ $dest$ $user$ by Authentication.src,Authentication.src_user,Authentication.dest,Authentication.user | `drop_dm_object_name("Authentication")` | eval src_user=if(src_user=="unknown",null(),src_user) | fields _time,action,app,src,src_user,dest,user,count | sort - count</searchTemplate>
		    
		    <option name="count">5</option>
		    
		    <drilldown>
		        <link>search?q=| `datamodel("Authentication", "Authentication")` | search Authentication.src="$row.src$" Authentication.dest="$row.dest$" Authentication.user="$row.user$" | `drop_dm_object_name("Authentication")`&amp;earliest=$earliest$&amp;latest=$latest$</link>
		    </drilldown>
		</table>
	</row>
	
	<row>
		<event id="event1">
			<title> </title>
			
			<searchTemplate>| `datamodel("Authentication", "Authentication")` | search $action$ $app$ $src$ $dest$ $user$ | `drop_dm_object_name("Authentication")` | head 100</searchTemplate>
			
			<option name="count">5</option>
			<option name="rowNumbers">false</option>
			<option name="type">list</option>
			<fields>action, app, src, src_user, dest, user</fields>
		</event>
	</row>
</form>