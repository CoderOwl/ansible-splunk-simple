<dashboard>
	<label>Security Posture</label>
	
	<!-- Key indicators -->
	<row>
		<html id="element1">
			<div class="key-indicators" data-group-name="security_posture"></div>
		</html>
	</row>
	
	<row>
        <chart id="element2">
            <title>Notable Events By Urgency</title>
            
            <!-- earliest/latest times are for ddown purposes only -->
            <earliestTime>-24h@h</earliestTime>
            <latestTime>now</latestTime>     
            
            <searchString>| `es_loadjob("ESS - Notable Events")` | search timeDiff_type=current | stats count by urgency | `stats2chart("urgency")`</searchString>
            
            <option name="charting.axisLabelsX.integerUnits">true</option>
            <option name="charting.axisTitleX.text">urgency</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">bar</option>
            <option name="charting.legend.labels">[unknown,informational,low,medium,high,critical]</option>
            <option name="charting.seriesColors">[0x999999,0x5378AD,0x98BF3B,0xF0BE1B,0xFF8800,0xD25B3B]</option>

            <drilldown>
                <link>incident_review?form.selected_urgency=$click.name2$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
        
        <chart id="element3">
        	<title>Notable Events Over Time</title>
        	
        	<searchName>Notable - Events Over Time By Security Domain</searchName>
        	
        	<option name="charting.axisTitleX.text">time</option>
            <option name="charting.axisTitleY.text">count</option>
        	
        	<drilldown>
        		<link>incident_review?form.security_domain=$click.name2$&amp;earliest=$earliest$&amp;latest=$latest$</link>
        	</drilldown>
        </chart>
	</row>
	
	<row>
		<table id="element4">
			<title>Top Notable Events</title>
			
			<searchName>Notable - Top Events</searchName>
			
			<drilldown>
				<link>incident_review?form.rule_name=$row.rule_name$&amp;earliest=$earliest$&amp;latest=$latest$</link>
			</drilldown>
		</table>
		
		<table id="element5">
			<title>Top Notable Event Sources</title>
			
			<searchName>Notable - Top Notable Event Sources</searchName>
			
			<drilldown>
				<link>incident_review?form.srch=src%3D$row.src$&amp;earliest=$earliest$&amp;latest=$latest$</link>
			</drilldown>
		</table>
	</row>
</dashboard>