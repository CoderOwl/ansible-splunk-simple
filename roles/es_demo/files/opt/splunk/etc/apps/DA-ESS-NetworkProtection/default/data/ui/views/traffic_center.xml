<form script="traffic_center.js">
	<label>Traffic Center</label>
	
	<fieldset autoRun="true" submitButton="true">
	
        <input type="dropdown" token="action">
            <label>Action</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="action" fieldForLabel="action">| `cim_traffic_actions`</populatingSearch>
            <default></default>
            <prefix>All_Traffic.action="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="bunit_form">
            <label>Business Unit</label>
            <default></default>
        </input>

        <input type="dropdown" token="category_form">
            <label>Category</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="category" fieldForLabel="category">| `categories`</populatingSearch>
            <default></default>
        </input>
        
		<input type="time">
			<default>Last 24 hours</default>
		</input>
	</fieldset>
	
	<!-- Key indicators -->
	<row>
		<html id="element1">
			<div class="key-indicators" data-group-name="traffic_center"></div>
		</html>
	</row>

	<row>
        <chart id="element2">
            <title>Traffic Over Time By Action</title>
            
            <searchTemplate>| `tstats` count from datamodel=Network_Traffic where * $action$ $bunit$ $category$ by _time,All_Traffic.action span=10m | timechart minspan=10m count by All_Traffic.action | `drop_dm_object_name("All_Traffic")`</searchTemplate>
            
            <option name="charting.axisTitleX.text">time</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">line</option>
            <option name="charting.chart.nullValueMode">zero</option>
            <option name="charting.legend.placement">bottom</option>

            <drilldown>
                <link>traffic_search?form.action=$click.name2$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
        
        <chart id="element3">
            <title>Traffic Over Time By Protocol</title>
            
            <searchTemplate>| `tstats` count from datamodel=Network_Traffic where * $action$ $bunit$ $category$ by _time,All_Traffic.transport span=10m | timechart minspan=10m useother=`useother` count by All_Traffic.transport | `drop_dm_object_name("All_Traffic")`</searchTemplate>
            
            <option name="charting.axisTitleX.text">time</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">line</option>
            <option name="charting.chart.nullValueMode">zero</option>
            <option name="charting.legend.placement">bottom</option>

            <drilldown>
                <link>traffic_search?form.transport=$click.name2$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
    </row>
        
    <row>  
       <table id="element4">
			<title>Top Sources</title>
			
			<searchTemplate>| tstats `summariesonly` count from datamodel=Network_Traffic where * $action$ $bunit$ $category$ by _time,All_Traffic.src span=10m | `drop_dm_object_name("All_Traffic")` | stats sparkline,count by src | sort 100 - count</searchTemplate>
			
			<drilldown>
				<link>traffic_search?form.src_form=$row.src$&amp;earliest=$earliest$&amp;latest=$latest$</link>
			</drilldown>
		</table>

        <chart id="element5">
            <title>Scanning Activity (Many Systems)</title>
            
            <searchTemplate>| tstats `summariesonly` dc(All_Traffic.dest) as dest_count from datamodel=Network_Traffic where * $action$ $bunit$ $category$ by All_Traffic.src | `drop_dm_object_name("All_Traffic")` | sort 10 - dest_count</searchTemplate>
            
            <option name="charting.axisTitleX.text">src</option>
            <option name="charting.axisTitleY.text">dc(dest)</option>
            <option name="charting.chart">bar</option>
            <option name="charting.legend.placement">none</option>
            <option name="height">310px</option>   

            <drilldown>
                <link>traffic_search?form.src_form=$click.value$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
	</row>
</form>