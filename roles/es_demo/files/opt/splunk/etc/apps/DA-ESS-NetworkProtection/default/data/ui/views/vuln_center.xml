<form script="vuln_center.js">
	<label>Vulnerability Center</label>
	
	<fieldset autoRun="true" submitButton="true">
        
        <input type="dropdown" token="severity">
            <label>Severity</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="severity" fieldForLabel="severity">| `cim_vuln_severities`</populatingSearch>
            <default></default>
            <prefix>Vulnerabilities.severity="</prefix>
            <suffix>"</suffix>
        </input>
               
        <input type="text" token="bunit_form">
            <label>Business Unit</label>
            <default></default>
        </input>

        <input type="dropdown" token="category_form">
            <label>Category</label>
            <choice value="">All</choice>
            <populatingSearch fieldForValue="category" fieldForLabel="category">| `categories`</populatingSearch>
            <default></default>
        </input>
        
		<input type="time">
			<default>Last 90 days</default>
		</input>
	</fieldset>
	
	<!-- Key indicators -->
	<row>
		<html id="element1">
			<div class="key-indicators" data-group-name="vuln_center"></div>
		</html>
	</row>
	
	<row>
        <chart id="element2">
            <title>Top Vulnerabilities</title>
            
            <searchTemplate>| tstats `summariesonly` dc(Vulnerabilities.dest) as dest_count from datamodel=Vulnerabilities where * $severity$ $bunit$ $category$ by Vulnerabilities.signature | `drop_dm_object_name("Vulnerabilities")` | sort 10 - dest_count</searchTemplate>
            
            <option name="charting.axisTitleX.text">signature</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">bar</option>
            <option name="charting.legend.placement">none</option>
            <option name="charting.legend.masterLegend"></option>
                     
            
            <drilldown>
                <link>vuln_search?form.signature=$click.value$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
        
        <chart id="element3">
            <title>Most Vulnerable Hosts</title>
            
            <searchTemplate> | tstats `summariesonly` dc(Vulnerabilities.signature) as vuln_count from datamodel=Vulnerabilities where * $severity$ $bunit$ $category$ by Vulnerabilities.severity,Vulnerabilities.dest | chart useother=`useother` first(vuln_count) over Vulnerabilities.dest by Vulnerabilities.severity | `drop_dm_object_name("Vulnerabilities")` | eval total=case(critical>0 AND high>0,critical+high,critical>0,critical,high>0,high,1==1,0) | eval subTotal=case(medium>0 AND low>0,medium+low,medium>0,medium,low>0,low,1==1,0) | eval subSubTotal=case(informational>0 AND unknown>0,informational+unknown,informational>0,informational,unknown>0,unknown,1==1,0) | sort 10 - total,subTotal,subSubTotal | fields - total,subTotal,subSubTotal | table dest,critical,high,medium,low,informational,unknown</searchTemplate>
            
            <option name="charting.axisTitleX.text">dest</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">bar</option>
            <option name="charting.chart.stackMode">stacked</option>
            <option name="charting.legend.placement">bottom</option>
            <option name="charting.legend.labels">[critical,high,medium,low,informational,unknown]</option>
            <option name="charting.seriesColors">[0xD25B3B,0xFF8800,0xF0BE1B,0x98BF3B,0x5378AD,0x999999]</option>

            <drilldown>
                <link>vuln_search?form.severity=$click.name2$&amp;form.dest=$click.value$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
    </row>

    <row>
        <chart id="element4">
            <title>Vulnerabilities By Severity</title>
            
            <searchTemplate>| tstats `summariesonly` dc(Vulnerabilities.signature) as vuln_count from datamodel=Vulnerabilities where * $severity$ $bunit$ $category$ by Vulnerabilities.severity,Vulnerabilities.dest | `drop_dm_object_name("Vulnerabilities")` | stats sum(vuln_count) as count by severity | `stats2chart(severity)`</searchTemplate>
            
            <option name="charting.axisTitleX.text">severity</option>
            <option name="charting.axisTitleY.text">count</option>
            <option name="charting.chart">bar</option>
            <option name="charting.legend.placement">bottom</option>
            <option name="charting.legend.labels">[critical,high,medium,low,informational,unknown]</option>
            <option name="charting.seriesColors">[0xD25B3B,0xFF8800,0xF0BE1B,0x98BF3B,0x5378AD,0x999999]</option>
 
            <drilldown>
                <link>vuln_search?form.severity=$click.value$&amp;earliest=$earliest$&amp;latest=$latest$</link>
            </drilldown>
        </chart>
        
        <table id="element5">
			<title>New Vulnerabilities</title>
			
			<searchTemplate>| `vuln_signature_reference` | `tracker_timerange_by_value("$earliest$","$latest$",firstTime,firstTime)` | `dayDiff(firstTime)` | `uitime(firstTime)` | sort 100 - firstTime | `makemv(cve)` | fields firstTime,signature,cve,vendor_product</searchTemplate>
			
			<drilldown>
                <link>vuln_search?form.signature=$row.signature$&amp;earliest=$earliest$&amp;latest=$latest$</link>
			</drilldown>
		</table>	
    </row>
</form>