<form script="web_search.js">
	<label>Web Search</label>
	
	<fieldset autoRun="true" submitButton="true">
	                
        <input type="text" token="http_method">
            <label>HTTP Method</label>
            <default></default>
            <prefix>Web.http_method="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="status">
            <label>HTTP Status</label>
            <default></default>
            <prefix>Web.status="</prefix>
            <suffix>"</suffix>
        </input>
                
        <input type="text" token="src">
            <label>Source</label>
            <default></default>
            <prefix>Web.src="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="dest">
            <label>Destination</label>
            <default></default>
            <prefix>Web.dest="</prefix>
            <suffix>"</suffix>
        </input>
        
        <input type="text" token="url">
            <label>URL</label>
            <default></default>
            <prefix>Web.url="</prefix>
            <suffix>"</suffix>
        </input>

		<input type="time">
			<default>Last 24 hours</default>
		</input>
	</fieldset>
	
	<row>
		<table id="table1">
			<title> </title>
			
			<searchTemplate>| tstats `summariesonly` max(_time) as _time,values(Web.http_method) as http_method,values(Web.status) as status,count from datamodel=Web where * $http_method$ $status$ $src$ $dest$ $url$ by Web.src,Web.dest,Web.url | `drop_dm_object_name("Web")` | sort - count | fields _time,http_method,status,src,dest,url,count</searchTemplate>
		    
		    <option name="count">5</option>
		    
		    <drilldown>
		        <link>search?q=| `datamodel("Web", "Web")` | search Web.src="$row.src$" Web.dest="$row.dest$" Web.url="$row.url$" | `drop_dm_object_name("Web")`&amp;earliest=$earliest$&amp;latest=$latest$</link>
		    </drilldown>
		</table>
	</row>
	
	<row>
		<event id="event1">
			<title> </title>
			
			<searchTemplate>| `datamodel("Web", "Web")` | search $http_method$ $status$ $src$ $dest$ $url$ | `drop_dm_object_name("Web")` | head 100</searchTemplate>
			
			<option name="count">5</option>
			<option name="rowNumbers">false</option>
			<option name="type">list</option>
			<option name="list.wrap">true</option>
			<fields>dest, category, http_method, http_referrer, http_user_agent, src, status, url</fields>
		</event>
	</row>
</form>